@model IEnumerable<BrandModel>
@{
    ViewData["title"] = "Danh muc san pham ";
}
<div style="height: 100px;"></div>
<a asp-action="Create" class="btn btn-success btn-sm" asp-controller="Brand">Thêm Sản Phẩm</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">danh muc</th>
            <th scope="col">Chi Tiết danh muc</th>

            <th scope="col">Slug</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Slug</td>


                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Brand" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="Brand" asp-route-Id="@item.Id">Xóa</a>
                </td>

            </tr>
        }

    </tbody>
</table>