@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 50px;
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #000000;
        color: white;
        border-bottom: none;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-body {
        padding: 30px;
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
    }

    .btn-primary {
        background-color: #008bff;
        border: none;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #000000;
        }

    .forgot-password {
        text-align: right;
    }

        .forgot-password a {
            color: #007bff;
        }

    .register-link a {
        color: #007bff;
    }

        .register-link a:hover {
            color: #0056b3;
        }
</style>
<div style="height: 100px;"></div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <form id="local-account" method="post">
                        <div class="mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                        </div>
                        <button id="local-login-submit" type="submit" class="btn btn-primary">Đăng Nhập</button>
                    </form>
                    <div class="forgot-password mt-3">
                        <a asp-page="./ForgotPassword">Bạn Quên Mật Khẩu À?</a>
                    </div>
                    <div class="register-link mt-3">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng Kí Tài Khoản Mới Ở Đây Nè</a>
                    </div>
                    <div class="mt-3">
                        <a asp-page="./ResendEmailConfirmation">Gửi Lại Mail Xác Nhận</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">Đăng Nhập Với Google</h1>
                </div>
                <div class="card-body">
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                        article
                                        about setting up this ASP.NET application to support logging in via external services
                                    </a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="google-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    if (provider.Name == "Google")
                                    {
                                        <button type="submit" class="btn btn-primary mt-3" name="provider" value="@provider.Name">@provider.DisplayName</button>
                                    }
                                }
                            </form>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
